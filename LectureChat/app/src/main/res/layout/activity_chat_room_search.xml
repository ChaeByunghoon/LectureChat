<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="kr.co.hoonki.lecturechat.Chat.ChatRoomSearchActivity">

    <RelativeLayout
        android:id="@+id/wrapper_chatSearchList_nav_bar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="#333333">

        <Button
            android:id="@+id/btn_chatSearchRoomList_search"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:background="@mipmap/ic_search_white_24dp"
            android:layout_marginEnd="8dp" />

        <EditText
            android:id="@+id/et_chatSearchRoomList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/btn_chatSearchRoomList_search"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:hint="채팅방 이름"
            android:textColorHint="#cccccc"
            android:textColor="#ffffff" />

    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_chatSearchList_chatList"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/wrapper_chatSearchList_nav_bar"
        >

    </android.support.v7.widget.RecyclerView>


</RelativeLayout>